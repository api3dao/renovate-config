{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":dependencyDashboard"],
  "ignoreScripts": true,
  "internalChecksFilter": "strict",
  "minimumReleaseAge": "14 days",
  "rangeStrategy": "bump",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["first day of the month"]
  },
  "packageRules": [
    {
      "description": "Monthly: Schedule major updates with 4-week stabilization",
      "matchUpdateTypes": ["major"],
      "minimumReleaseAge": "28 days",
      "schedule": ["first day of the month"]
    },
    {
      "description": "Monthly: Group all standard dev dependency updates",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "schedule": ["first day of the month"],
      "groupName": "dev-dependencies"
    },
    {
      "description": "Monthly: Group all standard dependency updates",
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "schedule": ["first day of the month"],
      "groupName": "dependencies"
    },
    {
      "description": "Infrastructure: Update Node/PNPM only every 6 months",
      "matchPackageNames": ["node", "@types/node", "actions/node-versions", "pnpm"],
      "schedule": ["first day of january", "first day of july"],
      "groupName": "infrastructure-maintenance",
      "respectLatest": false
    },
    {
      "description": "Block major updates for known ESM or specific problematic packages",
      "matchPackageNames": ["chalk", "tinyqueue", "is-wsl", "prettier-plugin-solidity", "hardhat", "ethers"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ]
}